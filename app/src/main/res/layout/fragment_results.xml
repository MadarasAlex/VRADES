<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.vrades.viewmodels.ResultsViewModel" />


    </data>

    <ScrollView
        android:id="@+id/svResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_app"
            tools:context=".ui.fragments.MyProfileFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clResultsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="50dp"
                android:background="@drawable/container_form"
                android:paddingBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetailedInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/see_the_details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:icon="@drawable/info_white_48dp"
                    app:iconPadding="3.5dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLineTopResults3" />

                <ImageView
                    android:id="@+id/ivLineTopResults3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/line"
                    android:src="@drawable/line_section_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clFinalResult" />

                <ImageView
                    android:id="@+id/ivLineTopResults2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/line"
                    android:src="@drawable/line_section_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameResults" />

                <ImageButton
                    android:id="@+id/btnBackResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:contentDescription="@string/about"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text=""
                    app:backgroundTint="@color/white"
                    app:elevation="0dp"
                    app:iconPadding="0dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/transparent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfilePictureResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/profile"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Profile"
                    app:srcCompat="@drawable/me" />

                <ImageView
                    android:id="@+id/ivLineTopResults"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/line"
                    android:src="@drawable/line_section_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameResults" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gdlMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:flow_firstHorizontalBias="0.5"
                    app:flow_horizontalAlign="center"
                    app:flow_horizontalBias="0.5"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.5"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvTestResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:text="@string/results"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivLineTopResults" />

                <TextView
                    android:id="@+id/tvNameResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibm_plex_sans_bold"
                    android:text="@string/the_boss"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivProfilePictureResults" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFaceResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/test_result_card_background"
                    android:paddingBottom="8dp"
                    app:flow_horizontalAlign="start"
                    app:layout_constraintEnd_toStartOf="@+id/gdlMiddle"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTestResults"
                    app:layout_constraintWidth_percent="0.44">

                    <ImageView
                        android:id="@+id/ivFaceImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"
                        android:contentDescription="@string/test_results"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/face_image_card" />

                    <TextView
                        android:id="@+id/tvFaceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_bold"
                        android:text="@string/face_detection"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivFaceImage" />

                    <ImageView
                        android:id="@+id/ivLineCard"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFaceText"
                        app:srcCompat="@drawable/line_card" />

                    <TextView
                        android:id="@+id/tvFaceResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/ibm_plex_sans"
                        android:text="@string/joy"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivLineCard" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAudioResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/test_result_card_background"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="@+id/gdlMiddle"
                    app:layout_constraintTop_toBottomOf="@+id/tvTestResults"
                    app:layout_constraintWidth_percent="0.44">

                    <ImageView
                        android:id="@+id/ivAudioImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"
                        android:contentDescription="@string/test_results"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/audio_result" />

                    <TextView
                        android:id="@+id/tvAudioTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_bold"
                        android:text="@string/audio_test"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivAudioImage" />

                    <ImageView
                        android:id="@+id/ivLineCard2"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAudioTest"
                        app:srcCompat="@drawable/line_card" />

                    <TextView
                        android:id="@+id/tvAudioResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/ibm_plex_sans"
                        android:text="@string/joy"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivLineCard2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clWritingResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/test_result_card_background"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/gdlMiddle"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clFaceResult"
                    app:layout_constraintWidth_percent="0.44">

                    <ImageView
                        android:id="@+id/ivWritingImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"
                        android:contentDescription="@string/test_results"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/writing_result" />

                    <TextView
                        android:id="@+id/tvWritingTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_bold"
                        android:text="@string/writing_test"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivWritingImage" />

                    <ImageView
                        android:id="@+id/ivLineCard3"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWritingTest"
                        app:srcCompat="@drawable/line_card" />

                    <TextView
                        android:id="@+id/tvWritingResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/ibm_plex_sans"
                        android:text="@string/joy"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivLineCard3" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFinalResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/test_result_card_background"
                    android:paddingBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/clWritingResult"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="@+id/gdlMiddle"
                    app:layout_constraintTop_toTopOf="@+id/clWritingResult"
                    app:layout_constraintWidth_percent="0.44">

                    <ImageView
                        android:id="@+id/ivFinalImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="16dp"
                        android:contentDescription="@string/test_results"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_content_paste_24" />

                    <TextView
                        android:id="@+id/tvFinalTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/ibm_plex_sans_bold"
                        android:text="@string/final_result"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ivFinalImage" />

                    <ImageView
                        android:id="@+id/ivLineCard4"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/line"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFinalTest"
                        app:srcCompat="@drawable/line_card" />

                    <TextView
                        android:id="@+id/tvFinalResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/ibm_plex_sans_bold"
                        android:text="@string/joy"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivLineCard4" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>