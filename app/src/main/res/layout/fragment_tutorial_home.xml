<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.vrades.viewmodels.TutorialViewModel" />

        <variable
            name="currentState"
            type="com.example.vrades.enums.TutorialState" />

        <variable
            name="stateTutorial"
            type="java.lang.Integer"
            android:value="@{currentState.START_PAGE.position}" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTutorialHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tutorial_background"
        tools:context=".ui.fragments.tutorial.TutorialHomeFragment">

        <ImageView
            android:id="@+id/ivLogoTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23000002"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvCompleteTutorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:text="@string/complete_the_tutorial_to_get_used_with_our_technologies"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogoTutorial" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartTutorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{() -> viewModel.onNextPageClicked()}"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            app:iconGravity="end"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvCompleteTutorial"
            app:layout_constraintStart_toStartOf="@+id/tvCompleteTutorial"
            app:layout_constraintTop_toBottomOf="@+id/tvCompleteTutorial" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>