<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VRADES" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Icons" parent="Widget.AppCompat.ImageButton">
        <item name="colorPrimary">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="elevation">0dp</item>
        <item name="tint">@color/transparent</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/menu_button</item>
        <item name="backgroundColor">@color/menu_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">0dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:backgroundTint">@color/menu_button</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextViews" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:showText">false</item>
        <item name="thumbTint">@color/transparent</item>
        <item name="track">@drawable/switch_disabled</item>

    </style>
    <style name="Profile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="background">@color/transparent</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>

    <style name="Theme.VRADES.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Tutorial" parent="Theme.AppCompat">
        <item name="background">@drawable/tutorial_background</item>
    </style>
    <style name="FloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="colorPrimary">@color/menu_button</item>
        <item name="colorSecondary">@color/menu_button</item>
        <item name="background">@color/menu_button</item>
        <item name="tint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.VRADES.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VRADES.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>